<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="net.anapsil.videoplayer.ui.adapter.VideosItemViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_margin="4dp"
        android:onClick="@{vm::onItemClick}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/thumb"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:background="@color/cardview_dark_background"
                android:scaleType="centerCrop"
                app:imageUrl="@{vm.image}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumb"
                android:layout_margin="8dp"
                android:layout_toStartOf="@+id/download"
                android:ellipsize="end"
                android:maxLines="1"
                app:binding="@{vm.name}"
                tools:text="Blue Lines"/>

            <android.support.v7.widget.AppCompatImageButton
                android:id="@id/download"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/thumb"
                android:layout_margin="8dp"
                android:alpha="0.54"
                android:onClick="@{vm::onDownloadClicked}"
                app:srcCompat="@drawable/ic_cloud_download"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>